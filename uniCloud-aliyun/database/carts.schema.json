// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [
		"goodsId",
		"count",
		"name",
		"imageUrl",
		"price"
	],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"goodsId": {
			"bsonType": "int",
			"description": "商品id"
		},
		"price": {
			"bsonType": "int",
			"description": "商品价格"
		},
		"count": {
			"bsonType": "int",
			"description": "购买商品数量"
		},
		"blessing": {
			"bsonType": "string",
			"description": "祝福语内容"
		},
		"name": {
			"bsonType": "string",
			"description": "商品名称"
		},
		"imageUrl": {
			"bsonType": "string",
			"description": "商品图片"
		}
	}
}